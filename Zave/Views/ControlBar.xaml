<UserControl x:Class="Zave.Views.ControlBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Zave.Views"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:diag="clr-namespace:System.Diagnostics;assembly=WindowsBase"
             prism:ViewModelLocator.AutoWireViewModel="True"             
             xmlns:converters="clr-namespace:Zave.Converters"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:vm="clr-namespace:ZaveViewModel.ViewModels;assembly=ZaveViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             d:DataContext="{d:DesignInstance vm:ControlBarViewModel, IsDesignTimeCreatable=True}">
    <UserControl.Resources>
        <converters:AvailableColorCollectionConverter x:Key="CollectionConverter"/>
        <Style x:Key="ControlBar_Container" TargetType="{x:Type StackPanel}">
            <Setter Property="Orientation" Value="Horizontal"></Setter>
            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
        </Style>
        <Style TargetType="{x:Type ListBox}">
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBox">
                        <Border BorderBrush="{TemplateBinding Border.BorderBrush}" BorderThickness="0" Name="Bd" Background="{TemplateBinding Panel.Background}" SnapsToDevicePixels="True" Padding="0">
                            <ScrollViewer Focusable="False" Padding="{TemplateBinding Control.Padding}">
                                <ItemsPresenter SnapsToDevicePixels="{TemplateBinding UIElement.SnapsToDevicePixels}" />
                            </ScrollViewer>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

        <!--<TextBlock   Text="[Zave Controls]" FontSize="72" FontFamily="Franklin Gothic Heavy" Opacity="0.8" VerticalAlignment="Center">
            <TextBlock.Effect>
                <DropShadowEffect Color="#FFF3FF00"/>
            </TextBlock.Effect>
        </TextBlock>-->
        <Grid x:Name="gridEntry">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0" Grid.Column="0" Style="{StaticResource ControlBar_Container}">
            <ListBox>
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBoxItem>
                    <Image Source="/Zave;component/media/images/new_t.jpg" Height="55" Width="70"/>
                </ListBoxItem>
                <ListBoxItem>
                    <Button Command="{Binding OpenZDFDelegateCommand}">
                    <Image Source="/Zave;component/media/images/open_t.jpg" Height="55" Width="70"/>
                    </Button>
                </ListBoxItem>
                <ListBoxItem>
                    <Button Command="{Binding SaveZDFDelegateCommand}">
                    <Image Source="/Zave;component/media/images/save_t.jpg" Height="55" Width="70"/>
                    </Button>
                </ListBoxItem>
                <ListBoxItem>
                    <Image Source="/Zave;component/media/images/undoredo_t.jpg" Height="55" Width="70"/>
                </ListBoxItem>
                <ListBoxItem>
                    <Image Source="/Zave;component/media/images/screenshot_t.jpg" Height="55" Width="70"/>
                </ListBoxItem>
            </ListBox>
        </StackPanel>
    <xctk:ColorPicker Grid.Row="0" Grid.Column="1" Name="ClrPcker_Background" VerticalAlignment="Center" AvailableColorsSortingMode="HueSaturationBrightness" IsManipulationEnabled="True" AvailableColors="{Binding ColorItemList, Converter={StaticResource CollectionConverter}}" ShowStandardColors="False" ShowRecentColors="True" ShowAdvancedButton="False" SelectedColor="{Binding ActiveColor}" />
    </Grid>

</UserControl>
